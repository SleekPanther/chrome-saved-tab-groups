{
	"manifest_version": 2,
	
	"name": "Saved Tab Groups",
	"description": "Save & restore groups of tabs (like an enhanced Ctrl+Shift+T)",
	"version": "0.5.0",
	"version_name": "0.5.0 Save/Load Buttons in Popup", 

	"browser_action": {
		"default_icon": "assets/icons/icon.png",
		"default_popup": "popup.html", 
		"default_title": "Saved Tab Groups"
	},
	"permissions": [
		"activeTab",
		"storage", 
		"tabs"
	], 
	"background": {
		"scripts": [
			"lib/jquery-min.js", 
			"background.js"
		]
	},
	"commands": {
		"saveTabs": {
			"suggested_key": {
				"default": "Alt+S"
			},
			"description": "Save current window tabs to group 1"
		}, 
		"loadTabs": {
			"suggested_key": {
				"default": "Alt+Shift+S"
			},
			"description": "Load group 1 tabs"
		}, 
		"clearSynced": {
			"suggested_key": {
				"default": "Alt+C"
			},
			"description": "Clear all saved tabs from synced storage"
		}, 
		"sendMessage": {
			"suggested_key": {
				"default": "Alt+W"
			},
			"description": "Testing shortcut"
		}
	}
}