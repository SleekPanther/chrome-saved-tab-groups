{
	"manifest_version": 2,
	
	"name": "Saved Tab Groups",
	"description": "Save & restore groups of tabs (like an enhanced Ctrl+Shift+T)",
	"version": "0.4.0",
	"version_name": "0.4.0 Popup Multiple Tab Groups", 

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html", 
		"default_title": "Saved Tab Groups"
	},
	"permissions": [
		"activeTab",
		"storage", 
		"tabs"
	], 
	"background": {
		"scripts": [
			"jquery-min.js", 
			// "jquery-ui-min.js", 
			"background.js"
		]
	},
	"commands": {
		"saveTabs": {
			"suggested_key": {
				"default": "Alt+S"
			},
			"description": "Save current window tabs to group 1"
		}, 
		"loadTabs": {
			"suggested_key": {
				"default": "Alt+Shift+S"
			},
			"description": "Load group 1 tabs"
		}
	}
}