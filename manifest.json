{
	"manifest_version": 2,
	
	"name": "Saved Tab Groups",
	"description": "Save & restore groups of tabs (like an enhanced Ctrl+Shift+T)",
	"version": "0.1.0",
	"version_name": "0.3.0 Pinned Tabs", 

	"browser_action": {
		"default_icon": "icon.png",
		// "default_popup": "popup.html", 
		"default_title": "Saved Tab Groups"
	},
	"permissions": [
		"activeTab",
		"storage", 
		"tabs"
	], 
	"background": {
		"scripts": [
			"jquery-min.js", 
			"background.js"
		]
	},
	"commands": {
		"saveTabs": {
			"suggested_key": {
				"default": "Alt+S"
			},
			"description": "Display Alert 1"
		}, 
		"loadTabs": {
			"suggested_key": {
				"default": "Alt+Shift+S"
			},
			"description": "Display Alert again"
		}
	}
}